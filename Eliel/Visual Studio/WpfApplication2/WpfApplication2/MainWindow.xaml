<Window x:Class="WpfApplication2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Read XML Menu" Height="530.586" Width="640.84">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="190*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Open the XML" HorizontalAlignment="Left" VerticalAlignment="Top" Width="229" Height="77" Click="Button_Click" Margin="138,0,0,0" Grid.Column="1" ToolTip="Open the XML file containing the menu"/>
        <ListBox x:Name="foodList" HorizontalAlignment="Left" Height="423" Margin="138,77,0,0" VerticalAlignment="Top" Width="229" Grid.Column="1"/>
        <Button Content="Show Waffles" HorizontalAlignment="Left" Margin="367,0,0,0" VerticalAlignment="Top" Width="203" Height="77" Click="Button_Click_1" Grid.Column="1"/>
        <Button Content="Show Pizza" HorizontalAlignment="Left" VerticalAlignment="Top" Width="201" Height="77" Click="Button_Click_2" Grid.ColumnSpan="2"/>
        <ListBox x:Name="Pizza" HorizontalAlignment="Left" Margin="0,77,0,0" Width="201" Grid.ColumnSpan="2"/>
        <ListBox x:Name="Waffles" HorizontalAlignment="Left" Height="423" Margin="367,77,0,0" VerticalAlignment="Top" Width="203" Grid.Column="1"/>

    </Grid>
</Window>
