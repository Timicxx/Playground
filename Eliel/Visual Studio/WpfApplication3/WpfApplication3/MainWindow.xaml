<Window x:Class="WpfApplication3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Currency Converter" Height="350" Width="525">
    <Grid>
        <Button x:Name="Convert" Content="Convert" Click="Convert_Click" Margin="308,264,0,0"/>
        <TextBox x:Name="USDAmount" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="517" FontSize="28" Margin="0,59,0,0"/>
        <TextBox x:Name="NOKAmount" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="517" Margin="0,199,0,0" FontSize="28"/>
        <Label Content="Convert from USD:" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" FontSize="22" FontStyle="Italic"/>
        <Label Content="Convert to NOK:" HorizontalAlignment="Left" Margin="0,160,0,0" VerticalAlignment="Top" FontSize="22" FontStyle="Italic"/>
        <ComboBox x:Name="Convertfrom" HorizontalAlignment="Left" Margin="342,32,0,0" VerticalAlignment="Top" Width="165" Height="27" SelectionChanged="Convertfrom_SelectionChanged">
            <TextBlock Text="USD"/>
            <TextBlock Text="NOK"/>
        </ComboBox>
        <ComboBox x:Name="Convertto" HorizontalAlignment="Left" Margin="342,172,0,0" VerticalAlignment="Top" Width="165" Height="27">
            <TextBlock Text="USD"/>
            <TextBlock Text="NOK"/>
        </ComboBox>

    </Grid>
</Window>
